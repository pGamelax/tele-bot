{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./build --target bun --external @prisma/client --external .prisma/client",
    "start": "bun run build/index.js",
    "db:generate": "bunx prisma generate",
    "db:migrate": "bunx prisma migrate dev --skip-generate",
    "db:migrate:generate": "bun run db:generate && bun run db:migrate",
    "db:studio": "bunx prisma studio",
    "db:push": "bunx prisma db push --skip-generate"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/static": "^1.1.1",
    "@elysiajs/swagger": "^1.1.2",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.18",
    "bullmq": "^5.70.1",
    "elysia": "^1.1.0",
    "grammy": "^1.21.0",
    "ioredis": "^5.10.0",
    "prisma": "^5.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0"
  }
}
